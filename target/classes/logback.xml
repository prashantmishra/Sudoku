<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>LOGS/myApp.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%M:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="sudoku.configuration">
        <appender-ref ref="FILE" />
    </logger>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>